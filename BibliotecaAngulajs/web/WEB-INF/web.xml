<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.br.library.accsess.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.br.library.accsess.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ByteArrayStreamServlet</servlet-name>
        <servlet-class>com.br.library.sql.ByteArrayStreamServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
        <url-pattern>/restrict/user/Login</url-pattern>
        <url-pattern>/restrict/admin/Login</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
        <url-pattern>/restrict/user/Logout</url-pattern>
        <url-pattern>/restrict/admin/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ByteArrayStreamServlet</servlet-name>
        <url-pattern>/ByteArrayStream</url-pattern>
        <url-pattern>/restrict/user/ByteArrayStream</url-pattern>
        <!--<url-pattern>/res/javascript/angular/userRestrict/ByteArrayStream</url-pattern>-->
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>403</error-code>
        <location>/error403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    <!--    <error-page>
        <error-code>500</error-code>
        <location>/error500.jsp</location>
    </error-page>-->
    <resource-ref>
        <res-ref-name>
            jdbc/db_biblioteca
        </res-ref-name>
        <res-type>
            javax.sql.DataSource
        </res-type>
        <res-auth>
            Container
        </res-auth>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>com.br.library.utils.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
